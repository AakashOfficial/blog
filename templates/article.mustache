{{<layout}}
{{$title}}{{article.title}} - Stephen Coakley{{/title}}

{{$content}}
<div class="content style-default">
    <p><a href="/blog"><i class="fa fa-arrow-left"></i> All Articles</a></p>

    <article>
        <h1>{{article.title}}</h1>

        <p class="postmeta"><small>
            <span class="date">{{article.dateString}}</span>
            <span class="author-by"> by </span>
            <span class="author">{{article.author}}</span>

            {{#article.category}}
            <p class="category">
                Posted under <a href="/category/{{article.category}}">{{article.category}}</a>
            </p>
            {{/article.category}}
        </small></p>

        {{{article.text}}}
    </article>

    <script data-isso="//comments.stephencoakley.com/" data-isso-require-author="true" src="//comments.stephencoakley.com/js/embed.min.js"></script>
    <section id="isso-thread"></section>
</div>
{{/content}}
{{/layout}}
