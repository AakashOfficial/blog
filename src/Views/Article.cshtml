@{
    Layout = "Layout";
    ViewData["Title"] = Model.Title;
    ViewData["Classes"] = "deferred-bio";
}
@model Blog.Article

<article>
    <h1>@Model.Title</h1>

    <p class="postmeta">
        <small>
            <time datetime="@Model.Date.ToString("o")" class="date">@Model.Date</time>
            <span class="author-by"> by </span>
            <span class="author">@Model.Author</span>
        </small>
    </p>
    <p class="category">
        <small>Posted under <a href="/category/@Model.Category">@Model.Category</a></small>
    </p>

    @Html.Raw(Model.Html)
</article>

<h2>Comments</h2>
<script data-isso="//comments.stephencoakley.com/" data-isso-css="false" data-isso-require-author="true" data-isso-require-email="true" src="//comments.stephencoakley.com/js/embed.min.js"></script>
<section id="isso-thread"></section>
<br/>
