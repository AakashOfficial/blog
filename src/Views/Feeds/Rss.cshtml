@model IEnumerable<Blog.Article>
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>Stephen Coakley</title>
        <link>https://stephencoakley.com</link>
        <atom:link href="https://stephencoakley.com@(Context.Request.Path)" rel="self" type="application/rss+xml"/>
        <description>Software developer and web designer</description>
        <pubDate>@Model.Last().Date.ToString("r")</pubDate>

        @foreach (var article in Model)
        {
            <item>
                <title>@article.Title</title>
                @Html.Raw($"<link>{article.CanonicalUri}</link>")
                <author>me@stephencoakley.com (Stephen Coakley)</author>
                <guid>@article.CanonicalUri</guid>
                <description>@article.Html</description>
                <pubDate>@article.Date.ToString("r")</pubDate>
            </item>
        }
    </channel>
</rss>
