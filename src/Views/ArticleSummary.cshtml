@model Blog.Article

<article>
    <h2><a href="/@Model.Slug">@Model.Title</a></h2>

    <small>
        <time datetime="@Model.Date.ToString("o")">@Model.Date.ToString("D")</time> under <a href="/category/@Model.Category">@Model.Category</a>
    </small>

    <p>@Html.Raw(Model.Summarize())</p>
</article>
