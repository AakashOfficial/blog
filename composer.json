{
    "name": "shameerc/textpress",
    "type": "application",
    "keywords": ["blog","flatfile","markdown"],
    "license": "MIT",
    "version": "2.0.0",
    "description": "A flat-file blog engine for PHP",
    "homepage": "http://textpress.shameerc.com",
    "authors": [
        {
            "name": "Shameer C",
            "homepage": "http://blog.shameerc.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "michelf/php-markdown" : "1.4.*",
        "slim/slim": ">=2.3",
        "swiftmailer/swiftmailer": "@stable"
    },
    "require-dev": {
        "codegyre/robo": "*",
        "coderstephen/robo-ftp": "~0.1",
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Coderstephen": "src",
            "Textpress" : "src/shameerc"
        },
        "psr-4": {
            "Textpress\\": "tests/src"
        }
    }
}
